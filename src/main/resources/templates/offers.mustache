<!DOCTYPE html>
<html>
    <head>
        <title>Item Offers</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="/css/offers.css">
    </head>
    <body>
        <div class="container">
            <h1>ğŸ›ï¸ Create an Offer</h1>

            <!-- Create Offer Form -->
            <form action="/offers" method="post" class="create-form">
                <label>Item:</label><input name="item" required type="text"><br>
                <label>Price:</label><input name="price" required type="text"><br>
                <label>Seller:</label><input name="seller" required type="text"><br>

                <input type="hidden" name="simulateError" value="false">

                <button type="submit">âœ¨ Submit Offer</button>
            </form>

            {{#message}}
                <div class="message-box">
                    <b>{{message}}</b>
                </div>
            {{/message}}

            <hr>

            <!-- Filter Form -->
            <h2>ğŸ” Filter Offers</h2>
            <form action="/offers" method="get">
                <div class="filter-form">
                    <div>
                        <label>Item:</label>
                        <input type="text" name="item" placeholder="e.g. Keyboard" value="{{itemFilter}}">
                    </div>

                    <div>
                        <label>Min Price:</label>
                        <input type="number" name="min" step="0.01" value="{{minFilter}}" placeholder="$0.00">
                    </div>

                    <div>
                        <label>Max Price:</label>
                        <input type="number" name="max" step="0.01" value="{{maxFilter}}" placeholder="$999.99">
                    </div>

                    <div>
                        <label>Seller:</label>
                        <input type="text" name="seller" placeholder="e.g. Amazon" value="{{sellerFilter}}">
                    </div>
                </div>

                <div class="filter-buttons">
                    <button type="submit">ğŸ” Apply Filter</button>
                    <button type="button" onclick="location.href='/offers'">ğŸ”„ Clear Filters</button>
                </div>
            </form>

            <hr>

            <!-- Filter feedback message -->
            {{#itemFilter}}
                <div class="filter-info">
                    Currently filtering results for <b>{{itemFilter}}</b>.
                </div>
            {{/itemFilter}}

            {{#sellerFilter}}
                <div class="filter-info">
                    Filtered by seller: <b>{{sellerFilter}}</b>.
                </div>
            {{/sellerFilter}}

            {{#minFilter}}
                <div class="filter-info">
                    Minimum price: <b>${{minFilter}}</b>
                </div>
            {{/minFilter}}

            {{#maxFilter}}
                <div class="filter-info">
                    Maximum price: <b>${{maxFilter}}</b>
                </div>
            {{/maxFilter}}

            <hr>

            <!-- Offers List -->
            <h2>ğŸ“‹ All Offers</h2>
            <ul id="offerList">
                {{#offers}}
                    <li>ğŸ·ï¸ {{item}} - <b>${{price}}</b> (by {{seller}})</li>
                {{/offers}}
                {{^offers}}
                    <li style="text-align: center; color: #64748b;">No offers found.</li>
                {{/offers}}
            </ul>
        </div>

        <script>
            const socket = new WebSocket("ws://localhost:4567/ws/price");

            socket.onmessage = (e) => {
                const data = JSON.parse(e.data);
                const offerList = document.getElementById("offerList");

                //Check if the item already exists in the list
                const existing = Array.from(offerList.children).find(li =>
                        li.textContent.includes(data.item + " -")
                );

                if (existing) {
                    // Update existing <li> entry
                    existing.innerHTML = `ğŸ·ï¸ ${data.item} - <b>$${data.price}</b> (by ${data.seller})`;
                } else {
                    // Add new one if it doesnâ€™t exist
                    const li = document.createElement("li");
                    li.innerHTML = `ğŸ·ï¸ ${data.item} - <b>$${data.price}</b> (by ${data.seller})`;
                    offerList.appendChild(li);
                }
            };

            //Sends an update through WebSocket
            function updatePrice(item, newPrice) {
                socket.send(JSON.stringify({ item, price: newPrice }));
            }

            //Manual input to trigger on real time updates
            function manualUpdate() {
                const item = document.getElementById("updateItem").value.trim();
                const price = parseFloat(document.getElementById("updatePrice").value);
                if (!item || isNaN(price)) {
                    alert("Please enter a valid item and price.");
                    return;
                }
                updatePrice(item, price);
            }

            //Clean query parameters before submitting filters
            document
                    .querySelector('form[action="/offers"][method="get"]')
                    .addEventListener("submit", function (e) {
                        const inputs = this.querySelectorAll("input");
                        inputs.forEach((input) => {
                            if (!input.value.trim()) {
                                input.removeAttribute("name");
                            }
                        });
                    });
        </script>


        <!-- test on price updates -->
        <hr>
        <h3>Update Price (Manual Test)</h3>
        <form onsubmit="event.preventDefault(); manualUpdate();">
            <label>Item:</label>
            <input id="updateItem" required>
            <label>New Price:</label>
            <input id="updatePrice" type="number" step="0.01" required>
            <button type="submit">Send Update</button>
        </form>

    </body>
</html>